// object oriented classes & use of super

// object oriented exercise
class Person {
    constructor (name, age, height) {
        this.name = name;
        this.age = age;
        this.height = height;
    }
    changename(newname) {
        this.name = newname;
    }

    birthday() {
        this.age += 1;
    }
    addHeight(height) {
        this.height = height;
    }
    }


// class Employee extends(Person) {
