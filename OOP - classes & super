//     }
// } 

// const newEmployee = new employee ("Jason", 30, 190);

class Student extends(Person) {
    constructor (name, age, height) {
        super(name, age, height);

}
addGrade(grade) {
    this.grade = grade; 
}
}
const newstudent = new Student('Mike', 24, 188);
console.log(newstudent);
